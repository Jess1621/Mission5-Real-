<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <!-- Title -->
    <title>@ViewData["Title"] - Mission4</title>
    <!--     Fonts and icons     -->
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Round" rel="stylesheet">
    <!-- CSS -->
    <link href="~/css/site.css" rel="stylesheet" />
    <!-- Favicon -->
    <link rel="icon" type="image/png" sizes="32x32" href="~/img/icons8-movie-64.png" />
</head>

<body>
    <!-- Navbar Transparent -->
    <nav class="navbar navbar-expand-lg position-absolute top-0 z-index-3 w-100 shadow-none my-3 navbar-transparent">
        <div class="container">
            <a class="navbar-brand  text-white" asp-controller="Home" asp-action="index">
                Mission 5
            </a>
            <button class="navbar-toggler shadow-none ms-2" type="button" data-bs-toggle="collapse" 
                    data-bs-target="#navigation" aria-controls="navigation" aria-expanded="false" 
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon mt-2">
                    <span class="navbar-toggler-bar bar1"></span>
                    <span class="navbar-toggler-bar bar2"></span>
                    <span class="navbar-toggler-bar bar3"></span>
                </span>
            </button>
            <div class="collapse navbar-collapse w-100 pt-3 pb-2 py-lg-0 ms-lg-12 ps-lg-5" id="navigation">
                <ul class="navbar-nav navbar-nav-hover ms-auto">
                    <li class="nav-item dropdown dropdown-hover mx-2 ms-lg-2">
                        <a asp-controller="Home" asp-action="MyPodcasts" 
                           class="nav-link ps-2 d-flex cursor-pointer align-items-center" 
                           id="dropdownMenuPages2" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="material-icons opacity-6 me-2 text-md">mic</i>
                            My Podcasts
                        </a>
                    </li>
                    <li class="nav-item dropdown dropdown-hover mx-2 ms-lg-2">
                        <a asp-controller="Home" asp-action="MovieList" class="nav-link ps-2 d-flex cursor-pointer align-items-center" id="dropdownMenuPages2" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="material-icons opacity-6 me-2 text-md">article</i>
                            Movie List
                        </a>
                    </li>
                    <li class="nav-item ms-lg-auto my-auto ms-3 ms-lg-0 mt-2 mt-lg-0">
                        <a asp-controller="Home" asp-action="MovieApplication" 
                           class="btn btn-sm  bg-gradient-primary mb-0 me-1 mt-2 mt-md-0">Add a Movie</a>
                    </li>
                </ul>
            </div>
         </div>
    </nav>
    <!-- End Navbar -->

    <!--Bring in Main Content-->
    @RenderBody()

    <!-- Footer -->
    <footer class="footer pt-5 mt-5">
        <div class="col-12">
            <div class="text-center">
                <p class="text-dark my-4 text-sm font-weight-normal">
                    All rights reserved. Copyright ©
                    <script>
                        document.write(new Date().getFullYear())
                    </script>Application Created By: Jess Hansen
                </p>
            </div>
        </div>
    </footer>
</body>

</html>
